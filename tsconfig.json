{
  "ts-node": {
    "files": true
  },
  "exclude": [
    "./node_modules",
  ],
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
