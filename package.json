    "email": "me@modestofiguereo.com"
  },
  "engines": {
    "node": ">=14",
    "npm": "~7.21.1"
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "ROOT_DIR=$(pwd) npm run compile && npm run serve",
    "watch": "nodemon",
    "build": "npm run compile && npm run lint",
    "serve": "NODE_PATH=dist/ node -r dotenv/config dist/app.js",
    "compile": "rm -rf dist/ && tsc",
