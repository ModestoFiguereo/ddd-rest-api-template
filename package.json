    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/drapit": "file:src/.framework/types",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.1.7",
    "@types/glob": "^7.1.4",
    "@types/jest": "^27.0.0",
